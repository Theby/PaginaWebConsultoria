                                <p class="animation animated-item-2"><%= t('welcome.imagen_1.descripcion') %></p>
                                <br>
                                <%= link_to t('welcome.imagen_1.link'), trayectoria_laboral_trayectoria_laboral_path(:area => "1", :num_servicio => "1", :proyectos_priv_size => "3"), :class => "btn btn-md animation animated-item-3" %>
